<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Contextid</th>
      <th>Component</th>
      <th>Commentarea</th>
      <th>Itemid</th>
      <th>Content</th>
      <th>Format</th>
      <th>Userid</th>
      <th>Timecreated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.contextid %></td>
        <td><%= comment.component %></td>
        <td><%= comment.commentarea %></td>
        <td><%= comment.itemid %></td>
        <td><%= comment.content %></td>
        <td><%= comment.format %></td>
        <td><%= comment.userid %></td>
        <td><%= comment.timecreated %></td>
        <td><%= link_to 'Show', comment %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_comment_path %>
