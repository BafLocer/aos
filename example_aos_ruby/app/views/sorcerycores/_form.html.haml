= form_for @sorcerycore do |f|
  - if @sorcerycore.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sorcerycore.errors.count, "error")} prohibited this sorcerycore from being saved:"
      %ul
        - @sorcerycore.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :crypted_password
    = f.text_field :crypted_password
  .field
    = f.label :salt
    = f.text_field :salt
  .actions
    = f.submit 'Save'
